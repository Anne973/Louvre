<div style="text-align:center; background-color:#555555;">
    <img style="padding-top:20px" src="{{ absolute_url(asset('images/louvre2.png')) }}" >

    <h1 style="padding-bottom:20px; color: white">Le Louvre Eticket</h1>
</div>
    <h2>{{ 'Votre Réservation'|trans }}</h2>
<p>{{ 'Date :'|trans }} {{order.date|date('d/m/Y') }}</p>
<p>{{ 'Référence commande :'|trans }} {{ order.stripe }} </p>
<p>{{ order.number}} {{ 'billet'|trans }}{{ order.number>1? "s":"" }} {{ order.type.name }}</p>

{% for ticket in order.tickets %}
    <hr>
    <p>{{ 'Nom :'|trans }} {{ticket.lastname}}</p>
    <p>{{ 'Prénom :'|trans }} {{ticket.firstname }}</p>
    <p>{{ 'Tarif :'|trans }} {{ ticket.tarif }} euros</p>
{%endfor %}